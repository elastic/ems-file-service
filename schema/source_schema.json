{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Source",
  "description": "Elastic Map Service data source",
  "type": "object",
  "required": [
    "type",
    "data",
    "name",
    "humanReadableName",
    "fieldMapping",
    "weight"
  ],
  "additionalProperties": false,
  "properties": {
    "versions": {
      "type": "string",
      "description":
        "Must be a semver compatible string (ex. v1, 1, 1.0.0, 1.x) or range (ex 1 - 2, ^1.0.1). See more examples at https://www.npmjs.com/package/semver. "
    },
    "type": {
      "type": "string",
      "enum": ["http", "ftp", "ESRI"]
    },
    "data": {
      "type": "string"
    },
    "query": {
      "description": "Query string parameters to append to the data",
      "type": "object"
    },
    "fieldMapping": {
      "description":
        "Specifies map source field names or properties to elastic map service properties",
      "type": "array"
    },
    "website": {
      "type": "string"
    },
    "compression": {
      "type": "string",
      "enum": ["zip"]
    },
    "filename": {
      "description":
        "Source filename in `data` folder. This file is also copied to the `dist/files` folder.",
      "type": "string"
    },
    "license": {
      "oneOf": [{ "type": "string" }, { "$ref": "#/definitions/license" }]
    },
    "attribution": {
      "type": "string"
    },
    "id": {
      "description":
        "Manifest id number. These are different ids for staging and production in v1 and v2 so it can be an object with `production` and `staging` properties.",
      "oneOf": [{ "type": "string" }, { "type": "number" }]
    },
    "ttl": {
      "description":
        "Time to live (seconds) until we recache the data from the source (unused)",
      "type": "integer"
    },
    "weight": {
      "description":
        "Weight of layer for ordering. Larger numbers appear higher in order.",
      "type": "integer"
    },
    "name": {
      "description": "Short name for source.",
      "type": "string"
    },
    "createdAt": {
      "description": "Layer creation date in ISO 8601 format.",
      "type": "string"
    },
    "humanReadableName": {
      "description": "Human readable layer name.",
      "type": "string"
    },
    "conform": {
      "$ref": "#/definitions/conform"
    },
    "note": {
      "oneOf": [{ "type": "string" }, { "type": "object" }]
    }
  },
  "definitions": {
    "license": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "text": {
          "type": "string"
        },
        "attribution": {
          "type": "boolean"
        },
        "attribution name": {
          "type": "string"
        },
        "share-alike": {
          "type": "boolean"
        }
      }
    },
    "conform": {
      "description": "top-level conform object definition",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "geojson",
            "shapefile",
            "shapefile-polygon",
            "gdb",
            "topojson"
          ]
        },
        "srs": {
          "type": "string",
          "pattern": "EPSG:[0-9]+"
        },
        "file": {
          "type": "string"
        },
        "layer": {
          "description": "specifies a layer to use from the GDB",
          "oneOf": [{ "type": "integer" }, { "type": "string" }]
        }
      }
    }
  }
}
